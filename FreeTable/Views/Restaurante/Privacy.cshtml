@model Restaurante

@{
    ViewData["Title"] = Model.Nombre;
    string pathImg = NamePaths.NamePathImg + Model.JsonName+".json";

}

<header>
    <img src="" alt="Imagen principal del restaurante" />
</header>

<section>
    <h1>@Model.Nombre</h1>

    <p>@Model.Description</p>

    <h2>Fotos</h2>

    <div class="restaurant-photos">
        <img src="" alt="Imagen principal del restaurante" />
        <img src="" alt="Imagen principal del restaurante" />
        <img src="" alt="Imagen principal del restaurante" />
    </div>

    <h2>Cartas y menus</h2>

    <ul>
        <li>Carta</li>
        <li>Menu semanal</li>
        <li>Menu de grupo</li>
    </ul>
</section>

<aside>
    <form method="post">
        <h3>Haz una reserva </h3>
        <input type="text" name="personas" placeholder="2 Personas" />
        <input type="text" name="fecha" placeholder="10/02/2024" />
        <input type="text" id="inp-border" name="hora" placeholder="20:30" list="disponibles" value="" />
        <datalist id="disponibles">
            <option>10:00</option>
            <option>10:30</option>
            <option>11:00</option>
            <option>11:30</option>
            <option>12:00</option>
            <option>12:30</option>
        </datalist>
        <input type="type" name="name" placeholder="Nombre" />
        <input type="type" name="name" placeholder="Correo" />
        <input type="type" name="name" placeholder="Teléfono" />
        
        <input type="submit" name="confirm" value="Confirmar" />
    </form>
</aside>



